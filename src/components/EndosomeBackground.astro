---
// EndosomeBackground.astro
// Two small, subtle, morphing "endosome" links placed in the background
---

<div class="endosome-bg-container">
  <!-- Top Left Pill Wrapper -->
  <div class="endosome-wrapper theme-stardust">
    <a href="/notes/nt-001-becoming-of-stardust" class="endosome-bg-pill theme-stardust" aria-label="Read about Becoming of Stardust"></a>
    <span class="endosome-label">read more</span>
  </div>
  
  <!-- Bottom Right Pill Wrapper -->
  <div class="endosome-wrapper theme-github">
    <a href="https://github.com/prasathup/website-1.0" target="_blank" rel="noreferrer noopener" class="endosome-bg-pill theme-github" aria-label="Visit GitHub Profile"></a>
    <span class="endosome-label">open source on git</span>
  </div>
</div>

<style>
  /* Container positions the pills absolutely in the background */
  .endosome-bg-container {
    position: fixed; /* Stay fixed in the background */
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none; /* Allow clicks to pass through normally... */
    z-index: 35; /* Lowered to be below theme toggle (z:40) on mobile, but above content */
    overflow: hidden;
  }

  /* Base Pill Styles - Inner Element */
  .endosome-bg-pill {
    position: relative; /* Changed from absolute to relative */
    display: block;
    width: 20px;
    height: 12px;
    pointer-events: auto;
    cursor: pointer;
    opacity: 0.6;
    /* Hardware acceleration to prevent jitter */
    transform: translateZ(0);
    -webkit-font-smoothing: antialiased;
    
    /* Transition for hover scaling and style changes */
    transition: background-color 0.3s ease,
                border-color 0.3s ease,
                box-shadow 0.3s ease,
                opacity 0.3s ease,
                filter 0.3s ease;
    
    /* The Morphing Animation - SHAPE ONLY */
    animation: pill-morph-shape 15s ease-in-out infinite alternate;
    will-change: border-radius, transform;
  }
  
  /* Touch target expansion pseudo-element */
  .endosome-bg-pill::after {
    content: '';
    position: absolute;
    top: -20px;
    left: -20px;
    right: -20px;
    bottom: -20px;
    z-index: -1;
  }
  
  /* Bevel pseudo-element to match gravitational bubble */
  .endosome-bg-pill::before {
    content: '';
    position: absolute;
    inset: 0;
    z-index: 1; /* Above background, below content if any */
    border-radius: inherit; /* Follows parent morph */
    pointer-events: none;
    
    /* Light mode bevel - subtle inner shadow */
    box-shadow: inset 0 0 4px rgba(0, 0, 0, 0.2); 
    opacity: 0.6;
    transition: opacity 0.3s ease, box-shadow 0.3s ease;
  }

  /* Wrapper for Positioning and Drift Animation */
  .endosome-wrapper {
    position: absolute;
    pointer-events: none; /* Let clicks pass through wrapper */
    z-index: 35; /* Lowered to be below theme toggle (z:40) */
    /* Hardware acceleration to prevent jitter */
    transform: translateZ(0);
    will-change: transform;
    
    /* The Drift Animation - MOVEMENT ONLY */
    animation: pill-drift-move 60s ease-in-out infinite alternate;
  }

  /* Label Styling */
  .endosome-label {
    position: absolute;
    top: 50%;
    transform: translateY(-50%) translateX(-10px); /* Initial offset */
    opacity: 0;
    pointer-events: none;
    white-space: nowrap;
    font-family: 'Ubuntu Mono', monospace;
    font-size: 0.75rem;
    font-weight: 500;
    transition: opacity 0.3s ease, transform 0.3s ease;
    
    /* Theme Colors */
    color: var(--text-secondary);
  }
  
  /* Show label on wrapper hover */
  .endosome-wrapper:hover .endosome-label {
    opacity: 1;
    transform: translateY(-50%) translateX(0);
  }
  
  /* Label Positioning */
  .endosome-wrapper.theme-stardust .endosome-label {
    left: 100%;
    margin-left: 12px;
    color: rgba(230, 101, 133, 0.9);
  }
  
  .endosome-wrapper.theme-github .endosome-label {
    right: 100%;
    margin-right: 12px;
    /* Flip slide direction for right-aligned label */
    transform: translateY(-50%) translateX(10px); 
    color: rgba(230, 177, 80, 0.9);
  }
  
  .endosome-wrapper.theme-github:hover .endosome-label {
    transform: translateY(-50%) translateX(0);
  }
  
  /* Dark mode text adjustments */
  :global(html.dark) .endosome-label {
    text-shadow: 0 0 8px rgba(0,0,0,0.5);
  }

  /* Positioning applied to wrapper */
  .endosome-wrapper.theme-stardust {
    top: clamp(100px, 25vh, 300px);
    left: clamp(30px, 10vw, 160px);
    animation-delay: 0s;
  }

  .endosome-wrapper.theme-github {
    bottom: clamp(100px, 22vh, 280px);
    right: clamp(30px, 10vw, 160px);
    animation-delay: -5s;
  }

  /* Remove old positioning from pill class since wrapper handles it */
  .endosome-bg-pill.theme-stardust {
    /* Position properties removed */
    animation-delay: 0s; /* Keep delay sync */
  }

  .endosome-bg-pill.theme-github {
    /* Position properties removed */
    animation-delay: -5s; /* Keep delay sync */
  }

  /* === Light Mode: "Sketch" Look with Bevel === */
  :global(html:not(.dark)) .endosome-bg-pill {
    background: rgba(255, 255, 255, 0.4); /* Slight fill for bevel visibility */
    border: 1.5px solid rgba(0, 0, 0, 0.5);
    /* Bevel handled by ::before now */
  }

  :global(html:not(.dark)) .endosome-bg-pill:hover::before {
    opacity: 1;
    box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
  }

  :global(html:not(.dark)) .endosome-bg-pill:hover {
    border-color: rgba(0, 0, 0, 0.9);
    /* Removed zoom on hover */
    background: rgba(0, 0, 0, 0.05);
  }

  /* === Dark Mode: "Glow" Look with Bevel === */
  :global(html.dark) .endosome-bg-pill {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(2px);
  }
  
  /* Dark mode bevel override */
  :global(html.dark) .endosome-bg-pill::before {
    box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.4);
    opacity: 0.8;
  }
  
  :global(html.dark) .endosome-bg-pill:hover::before {
    box-shadow: inset 0 0 8px rgba(0, 0, 0, 0.6);
    opacity: 1;
  }

  /* Stardust Theme (Pink) - Harmonized Glow */
  :global(html.dark) .endosome-bg-pill.theme-stardust {
    border-color: rgba(230, 101, 133, 0.4);
    /* Base glow */
    filter: drop-shadow(0 0 2px rgba(230, 101, 133, 0.3));
  }

  /* GitHub Theme (Amber) - Harmonized Glow */
  :global(html.dark) .endosome-bg-pill.theme-github {
    border-color: rgba(230, 177, 80, 0.4);
    /* Base glow */
    filter: drop-shadow(0 0 2px rgba(230, 177, 80, 0.3));
  }

  /* Hover Effects - Harmonized Stronger Glow */
  :global(html.dark) .endosome-bg-pill:hover {
    /* Removed zoom on hover */
    background: rgba(255, 255, 255, 0.1);
    opacity: 1;
  }

  :global(html.dark) .endosome-bg-pill.theme-stardust:hover {
    border-color: rgba(230, 101, 133, 0.8);
    /* Consistent strong outer glow */
    filter: drop-shadow(0 0 8px rgba(230, 101, 133, 0.6));
  }

  :global(html.dark) .endosome-bg-pill.theme-github:hover {
    border-color: rgba(230, 177, 80, 0.8);
    /* Consistent strong outer glow */
    filter: drop-shadow(0 0 8px rgba(230, 177, 80, 0.6));
  }

  /* Stop ONLY shape animation on hover, drift continues smoothly or pauses if desired */
  .endosome-bg-pill:hover {
    animation-play-state: paused;
  }
  
  /* Keep wrapper drift active even on hover to prevent 'hiccup' stop/start */
  /* .endosome-wrapper:hover {
     animation-play-state: paused; 
  } */

  /* Split Animations */
  
  /* 1. Shape Morphing (Border Radius) - Applied to Inner Pill */
  @keyframes pill-morph-shape {
    0%   { border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%; }
    20%  { border-radius: 58% 42% 75% 25% / 76% 46% 54% 24%; }
    40%  { border-radius: 50% 50% 33% 67% / 55% 27% 73% 45%; }
    60%  { border-radius: 33% 67% 58% 42% / 63% 68% 32% 37%; }
    80%  { border-radius: 60% 40% 40% 60% / 40% 60% 60% 40%; }
    100% { border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%; }
  }

  /* 2. Drift Movement (Transform) - Applied to Wrapper */
  @keyframes pill-drift-move {
    0%   { transform: translate(0, 0) rotate(0deg); }
    20%  { transform: translate(10px, -8px) rotate(5deg); }
    40%  { transform: translate(-8px, 12px) rotate(-2deg); }
    60%  { transform: translate(12px, 5px) rotate(8deg); }
    80%  { transform: translate(-5px, -12px) rotate(-5deg); }
    100% { transform: translate(0, 0) rotate(0deg); }
  }

  /* Responsive Positioning */
  @media (max-width: 768px) {
    .endosome-bg-pill {
        width: 25px; 
        height: 18px;
    }
    
    /* Update responsive targets to wrapper - lower z-index to avoid theme toggle overlap */
    .endosome-wrapper {
        z-index: 35; /* Lowered from 50 to be below theme toggle (z:40) */
    }
    
    .endosome-wrapper.theme-stardust {
        top: clamp(90px, 18vh, 180px);
        left: clamp(15px, 6vw, 60px);
    }
    
    /* Adjust GitHub endosome position to avoid theme toggle overlap on mobile */
    .endosome-wrapper.theme-github {
        bottom: clamp(80px, 12vh, 140px); /* Moved up to avoid theme toggle */
        right: clamp(15px, 6vw, 60px);
    }
  }
</style>

